{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Freeze Flask App",
            "type": "debugpy",
            "request": "launch",
            "program": "freeze.py",
        },
        {
            "name": "Python Debugger: Flask Dev Server",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "args": [
                "run",
                "--debug",
                "--extra-files",
                "configs.yaml"
            ],
            "autoStartBrowser": true
        },
        {
            "name": "Python Debugger: Freeze and Run Flask App",
            "type": "debugpy",
            "request": "launch",
            "program": "freeze.py",
            "args": [
                "--run"
            ],
            "autoStartBrowser": true
        },
    ]
}